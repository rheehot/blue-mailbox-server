{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "include" : [
      "src/**/*.ts"   /* Include every ts file in source folder */
    ],
    "exclude" : [
        "node_modules"  /* exclude everything in  node_modules */
    ]	
  }
}
